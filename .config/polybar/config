[module/previous]
type = custom/ipc
format-font = 2
; Default
hook-0 = echo ""
; When spotify active
hook-1 = echo "%{F#8fbcbb}玲%{F-}"
click-left = "spotifyctl -q previous"
format-color = ${colors.frost-alt}


[module/next]
type = custom/ipc
format-font = 2
; Default
hook-0 = echo ""
; When spotify active
hook-1 = echo "%{F#8fbcbb}怜%{F-}"
click-left = "spotifyctl -q next"
format-color = ${colors.frost-alt}


[module/playpause]
type = custom/ipc
format-font = 2
; Default
hook-0 = echo ""
; Playing
hook-1 = echo "%{F#8fbcbb}%{F-}"
; Paused
hook-2 = echo "%{F#8fbcbb}契%{F-}"
click-left = "spotifyctl -q playpause"
format-hook-1-color = ${colors.frost-alt}


[module/spotify]
type = custom/ipc
; Default
hook-0 = echo ""
; Playing/paused show song name and artist
hook-1 = /home/alexandre/.config/polybar/spotify-polybar.sh
format-foreground-color = ${colors.frost-alt}

